<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/main_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:onClick="goToCreatePlayers"
        android:text="@string/start"
        app:layout_constraintBottom_toTopOf="@+id/main_addDictButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_continue"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/main_addDictButton"
        android:layout_width="233dp"
        android:layout_height="73dp"
        android:onClick="goToMenage"
        android:text="Словари"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_continue" />

    <Button
        android:id="@+id/main_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToGame"
        android:text="Продолжить "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />
</androidx.constraintlayout.widget.ConstraintLayout>